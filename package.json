{
  "name": "tinkering",
  "displayName": "tinkering",
  "description": "A simple and convenient way to run Laravel Tinker directly inside VSCode, avoiding the complexity of writing commands manually in the terminal.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.103.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:tinkering.init",
    "onCommand:tinkering.run"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "tinkering.init",
        "title": "Laravel Tinkering: Init Playground"
      },
      {
        "command": "tinkering.run",
        "title": "Laravel Tinkering: Run Current File",
        "when": "resourceFilename == playground.php",
        "icon": {
          "light": "./media/play.svg",
          "dark": "./media/play.svg"
        }
      }
    ],
    "keybindings": [
      {
        "command": "tinkering.init",
        "key": "ctrl+alt+i",
        "when": "editorTextFocus"
      },
      {
        "command": "tinkering.run",
        "key": "ctrl+alt+r",
        "when": "editorTextFocus"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "tinkering.run",
          "when": "tinkering:showButton",
          "group": "navigation",
          "icon": {
            "light": "./media/play.svg",
            "dark": "./media/play.svg"
          }
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.104.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "eslint": "^9.34.0",
    "typescript": "^5.9.2",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2"
  }
}
